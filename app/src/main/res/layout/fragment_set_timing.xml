<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/curve"
    tools:context="com.squaresdevelopers.tyft.views.fragments.SetTimingFragment">


    <ImageView
        android:id="@+id/logo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="25dp"
        android:src="@drawable/logo" />


    <RelativeLayout
        android:id="@+id/login_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10sp"
        android:layout_marginRight="10sp"
        android:background="@drawable/round_button_white"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_shedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Schedule your timing"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark" />


        <com.savvi.rangedatepicker.CalendarPickerView
            android:id="@+id/calendar_picker"
            android:layout_width="match_parent"
            android:layout_height="280sp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:layout_margin="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/tv_shedule"
            android:scrollbarStyle="outsideOverlay"
            android:clipToPadding="false"
            app:tsquare_dividerColor="@color/white"
            app:tsquare_headerTextColor="@color/blue" />

        <LinearLayout
            android:id="@+id/ll_start_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_below="@id/calendar_picker"
            android:layout_marginTop="8dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/round_layout"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/timer"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"  />

            <TextView
                android:id="@+id/tv_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/calendar_picker"
                android:layout_marginLeft="15dp"
                android:text="From"
                android:gravity="center"
                android:layout_gravity="center"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_end_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_below="@id/ll_start_time"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/round_layout"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/timer"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"  />

            <TextView
                android:id="@+id/tv_end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/calendar_picker"
                android:layout_marginLeft="15dp"
                android:text="To"
                android:gravity="center"
                android:layout_gravity="center"/>

        </LinearLayout>


        <TextView
            android:id="@+id/tv_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_end_time"
            android:layout_alignParentRight="true"
            android:text="Done"
            android:textStyle="bold"
            android:layout_marginRight="20dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="30dp"/>


    </RelativeLayout>

</RelativeLayout>
