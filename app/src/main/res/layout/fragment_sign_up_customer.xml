<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".views.signup.ui.CustomerSignUpFragment">


    <TextView
        android:id="@+id/logo"
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"/>

    <LinearLayout
        android:id="@+id/login_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_marginTop="50sp"
        android:layout_marginRight="30sp"
        android:layout_marginLeft="30sp"
        android:gravity="center"
        android:background="@drawable/round_layout"
        android:orientation="vertical">
        <TextView
            android:id="@+id/account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/singup"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/yellow"
            android:fontFamily="@font/poppins_medium"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10sp"/>

        <EditText
            android:id="@+id/et_customer_email"
            android:layout_below="@id/account"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginLeft="25sp"
            android:layout_marginRight="25sp"
            android:layout_marginTop="10sp"
            android:fontFamily="@font/regular"
            android:textSize="18sp"
            android:inputType="textEmailAddress"
            android:hint="@string/email"/>

        <EditText
            android:id="@+id/et_customer_username"
            android:layout_below="@id/account"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginLeft="25sp"
            android:layout_marginRight="25sp"
            android:layout_marginTop="10sp"
            android:fontFamily="@font/regular"
            android:textSize="18sp"
            android:inputType="textEmailAddress"
            android:hint="Username"/>

        <EditText
            android:id="@+id/et_customer_password"
            android:layout_below="@id/et_email"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginLeft="25sp"
            android:layout_marginRight="25sp"
            android:layout_marginTop="10sp"
            android:fontFamily="@font/regular"
            android:textSize="18sp"
            android:inputType="textPassword"
            android:hint="@string/password"/>


        <Button
            android:id="@+id/btn_customer_login"
            android:layout_width="100sp"
            android:layout_height="40sp"
            android:text="@string/singup"
            android:layout_below="@id/et_password"
            android:layout_marginTop="10sp"
            android:layout_marginRight="30sp"
            android:layout_marginLeft="30sp"
            android:fontFamily="@font/regular"
            android:layout_marginBottom="20sp"
            android:background="@drawable/round_button"
            android:textColor="@color/black"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_layout"
        android:layout_marginTop="10sp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerHorizontal="true">
        <TextView
            android:id="@+id/not_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/already"
            android:textSize="18sp"
            android:fontFamily="@font/regular"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btn_customer_already_register"
            android:layout_width="100sp"
            android:layout_height="40sp"
            android:text="@string/login"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="5sp"
            android:fontFamily="@font/regular"
            android:background="@drawable/round_button_white"
            android:textColor="@color/black"
            android:layout_below="@id/not_register"
            android:layout_alignBaseline="@id/not_register" />
    </LinearLayout>

</RelativeLayout>